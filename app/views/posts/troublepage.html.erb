<div class='post-contents'>
  <h1 class='title'>お悩み投稿</h1>
  <ul clss='post-lists'>
    <% @troublepages.each do |t| %>
    <li class='list'>
      <div class='post-username'>
        <%= link_to t.user.nickname, root_path, class: :post__user %>さんの投稿
      </div>
      <div class='post-img-content'>
        <% t.images.each do |image| %>
          <%= link_to image_tag(image, width:200, class: :post__img), root_path %>
        <% end %>
      <div class='post-title'>
        <%= link_to t.title, root_path, class: :post__title %>
      </div>
    </li>
      <div class='post-tagname'>
      </div>
    <% end %>
  </ul>
</div>
